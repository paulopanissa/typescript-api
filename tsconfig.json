{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "./server/**/*.ts",
    "./server/*.ts",
    "./tests/**/*.ts",
    "./tests/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ],
  "compileOnSave": true
}